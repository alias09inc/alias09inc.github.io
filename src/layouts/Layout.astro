---
const { title = 'My Astro Blog' } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<div class="container">
				<a href="/" class="logo">My Astro Blog</a>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
		<footer>
			<div class="container">Â© {new Date().getFullYear()} My Astro Blog</div>
		</footer>
	</body>
</html>

<style>
	:global(body) {
		font-family: "Hiragino Sans", "Noto Sans JP", system-ui, sans-serif;
		margin: 0;
		background: #f8fafc;
		color: #0f172a;
		line-height: 1.7;
	}

	:global(a) {
		color: inherit;
		text-decoration: none;
	}

	header,
	footer {
		background: white;
		border-bottom: 1px solid #e2e8f0;
	}

	footer {
		border-top: 1px solid #e2e8f0;
		border-bottom: none;
		margin-top: 40px;
		padding: 20px 0;
		color: #64748b;
	}

	.container {
		max-width: 720px;
		margin: 0 auto;
		padding: 24px;
	}

	.logo {
		font-weight: 700;
		font-size: 1.1rem;
	}

	main {
		min-height: 70vh;
	}
</style>
